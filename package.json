{
  "metapak": {
    "configs": [
      "main",
      "readme",
      "tsesm",
      "eslint",
      "jest",
      "ghactions",
      "coveralls",
      "codeclimate"
    ],
    "data": {
      "files": "'src/**/*.ts'",
      "testsFiles": "'src/**/*.test.ts'",
      "distFiles": "'dist/**/*.js'",
      "ignore": [
        "dist"
      ],
      "bundleFiles": [
        "dist",
        "src"
      ]
    }
  },
  "name": "metapak-nfroidure",
  "description": "A metapak module for my open source projects.",
  "version": "19.0.1",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nfroidure/metapak-nfroidure.git"
  },
  "scripts": {
    "build": "rimraf 'dist' && tsc --outDir dist",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "cli": "env NODE_ENV=${NODE_ENV:-cli}",
    "cover": "node --run jest -- --coverage",
    "cz": "env NODE_ENV=${NODE_ENV:-cli} git cz",
    "format": "npm run prettier",
    "jest": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest",
    "lint": "eslint 'src/**/*.ts'",
    "metapak": "metapak",
    "precz": "node --run test && node --run lint && node --run build && npm run type-check && node --run metapak -- -s",
    "prettier": "prettier --write 'src/**/*.ts'",
    "preversion": "node --run test && node --run lint && node --run build && npm run type-check && node --run metapak -- -s",
    "rebuild": "swc ./src -s -d dist -C jsc.target=es2022",
    "test": "node --run jest",
    "type-check": "tsc --pretty --noEmit",
    "version": "node --run changelog"
  },
  "author": {
    "name": "Nicolas Froidure",
    "email": "nicolas.froidure@insertafter.com",
    "url": "https://insertafter.com/en/index.html"
  },
  "license": "MIT",
  "peerDependencies": {
    "metapak": "^6.0.0"
  },
  "engines": {
    "node": ">=22.16.0"
  },
  "bugs": {
    "url": "https://github.com/nfroidure/metapak-nfroidure/issues"
  },
  "homepage": "https://github.com/nfroidure/metapak-nfroidure#readme",
  "overrides": {
    "eslint": "^9.28.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.31",
    "@swc/helpers": "^0.5.17",
    "@swc/jest": "^0.2.38",
    "@types/eslint": "^9.6.1",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.13.0",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^29.7.0",
    "metapak": "^6.0.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "escape-string-regexp": "^5.0.0",
    "yerror": "^8.0.0"
  },
  "contributors": [],
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "prettier": {
    "semi": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest",
        {}
      ]
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "(.+)\\.js": "$1"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "prettierPath": null
  }
}